<%- include ('../partials/header')%>

<div class="container">
  <%if(salary.length<1){%>
  <h1> No record found</h1>
  
  <% }else{ %>
  <%var gd=0%>
</div>

<div class="container">
  <div class="row border justify-content-center text-white"style="background:blue;">
    <p><strong>Salary and Commision</strong></p>
  </div>
    <div class="row border">
        
      <div class="col-6 border">
      <P><strong>Name</strong></P>
    </div>
    <div class="col-2 border">
      <P><strong>Date</strong></P>
    </div>
    <div class="col-2 border">
      <P><strong>Designation</strong></P>
    </div>
    <div class="col-2 border">
      <P><strong>Amount</strong></P>
    </div>
        
    </div>
    <% salary.forEach(function(salary){ %>
    <div class="row border">
        
        <div class="col-6 border">
      <P><%=salary.name%></P>
    </div>
    <div class="col-2 border">
      <P><%=salary.date%></P>
    </div>
     <div class="col-2 border">
      <P><%=salary.designation%></P>
    </div>
    <div class="col-2 border">
      <P><%=salary.amount%></P>
    </div>
    </div>
    <%gd=gd+parseFloat(salary.amount)%>
    
    <% }) %>
    <div class="row border">
      <div class="col-10 border">
        <p class="text-right"><strong>Grand Total</strong></p>
      </div>
      <div class="col-2 border">
        <P><strong><%=gd.toFixed(2)%></strong></P>
      </div>
    </div>
</div>
        
<% } %>        
        
<%- include ('../partials/footer')%>