<%- include ('../partials/header')%>
<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">  
<div class="container">
    <div class="row border justify-content-center text-black"style="background:#07b0f2;">
    <h1 style="margin:8px;"><strong>EMPLOYEE</strong></h1>
  </div>
  </div>
     <div class="container border" style="padding:0"> 
     <h3 class="text-success border"style="margin:0">SALESMAN</h3>
     </div>
     <div class="container border">
               <div class="row" style="display:flex; flex-wrap: wrap; padding:10px 0">
   <% employee.forEach(function(employee){%>
   <% if(employee.designation==="salesman"||employee.designation==="Salesman"||employee.designation==="SALESMAN"){%>
    <div class="col-md-3 col-sm-6">
        <div class="img-fluid img-thumbnail">
            <img  src="<%=employee.image%>"class="img-fluid" alt="Responsive image"style="height:200px;width:100%">
            <div class="caption">
            <h6><a href="#" class="text-muted"><%=employee.name%></a></h6>
            <h6><a href="#" class="text-muted"><%=employee.designation%></a></h6>
            <h6><a href="#" class="text-muted">Salary=<%=employee.salary%></a></h6>
            
            <form id="deleteform" action="/employee/<%=employee._id%>?_method=DELETE" method="post">
                         <button class="btn btn-sm btn-outline-danger btn-block">Delete</button>
                     </form>
            
            </div>
        </div>
        
        
    </div>
    <% } %>
<% }); %>

</div> 
     </div>       
     
     
     
     
      <div class="container border" style="padding:0"> 
     <h3 class="text-success border"style="margin:0">OTHERS/EXTRA</h3>
     </div>
     <div class="container border">
               <div class="row" style="display:flex; flex-wrap: wrap; padding:10px 0">
   <% employee.forEach(function(employee){%>
   <% if(employee.designation!="salesman"&&employee.designation!="Salesman"&&employee.designation!="SALESMAN"){%>
    <div class="col-md-3 col-sm-6">
        <div class="img-fluid img-thumbnail">
            <img  src="<%=employee.image%>"class="img-fluid" alt="Responsive image"style="height:200px;width:100%">
            <div class="caption">
            <h6><a href="#" class="text-muted"><%=employee.name%></a></h6>
            <h6><a href="#" class="text-muted"><%=employee.designation%></a></h6>
            <h6><a href="#" class="text-muted">Salary=<%=employee.salary%></a></h6>
            
            <form id="deleteform" action="/employee/<%=employee._id%>?_method=DELETE" method="post">
                         <button class="btn btn-sm btn-outline-danger btn-block">Delete</button>
                     </form>
            
            </div>
        </div>
        
        
    </div>
    <% } %>
<% }); %>

</div> 
     </div>       
<%- include ('../partials/footer')%>