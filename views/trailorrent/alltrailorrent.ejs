<%- include ('../partials/header')%>

<div class="container">
  <%if(trailor.length<1){%>
  <h1> No record found</h1>
  
  <% }else{ %>
  <%var gd=0%>
</div>
<section class="container-fluid px-0">
<img  src="https://res.cloudinary.com/djweoyvdx/image/upload/v1588074420/CamScanner_04-28-2020_13.27.16_2-1_hzuuch.jpg"class="img-fluid" alt="">
</section>
<div class="container">
  <div class="row border justify-content-center text-black"style="background:#07b0f2;">
    <p style="margin:8px;"><strong>TREAILER RENT EXPENSES <%=trailor[0].month%> <%=trailor[0].year%></strong></p>
  </div>
    <div class="row border">
       <div class="col-1 border">
      <P><strong>voucher no</strong></P>
    </div> 
    <div class="col-2 border">
      <P><strong>Date</strong></P>
    </div>
    <div class="col-7 border">
      <P><strong>Description</strong></P>
    </div>
    <div class="col-2 border">
      <P><strong>Amount<br>SR</strong></P>
    </div>
        
    </div>
    <% trailor.forEach(function(rent){ %>
    <div class="row border">
         <div class="col-1 border">
           <%if(currentuser && currentuser.isadmin.toString()==="true"){%>
      <P><a href="/expenses/edittrailorrent/<%=rent._id%>/edit"><%=rent.voucherno%></a></P>
      <% }else{ %>
                 <P><%=rent.voucherno%></P>
      <% } %>
     
    </div>
    <div class="col-2 border">
      <P><%=rent.date%></P>
    </div>
     <div class="col-7 border">
      <P><%=rent.desc%></P>
    </div>
    <div class="col-2 border">
      <P><%=rent.amount%></P>
    </div>
    </div>
    <%gd=gd+parseFloat(rent.amount)%>
    
    <% }) %>
    <div class="row border">
      <div class="col-10 border">
        <p class="text-right"><strong>Grand Total</strong></p>
      </div>
      <div class="col-2 border">
        <P><strong><%=gd.toFixed(2)%> SR</strong></P>
      </div>
    </div>
</div>
        
<% } %>        
        
<%- include ('../partials/footer')%>