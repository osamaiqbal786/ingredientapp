<%- include ('../partials/header')%>

<div class="container">
  <%if(trailor.length<1){%>
  <h1> No record found</h1>
  
  <% }else{ %>
  <%var gd=0%>
</div>

<div class="container">
  <div class="row border justify-content-center text-white"style="background:blue;">
    <p><strong>Trailor rent expenses</strong></p>
  </div>
    <div class="row border">
       <div class="col-1 border">
      <P><strong>voucher no</strong></P>
    </div> 
    <div class="col-2 border">
      <P><strong>Date</strong></P>
    </div>
    <div class="col-7 border">
      <P><strong>Description</strong></P>
    </div>
    <div class="col-2 border">
      <P><strong>Amount</strong></P>
    </div>
        
    </div>
    <% trailor.forEach(function(rent){ %>
    <div class="row border">
         <div class="col-1 border">
      <P><%=rent.voucherno%></P>
    </div>
    <div class="col-2 border">
      <P><%=rent.date%></P>
    </div>
     <div class="col-7 border">
      <P><%=rent.desc%></P>
    </div>
    <div class="col-2 border">
      <P><%=rent.amount%></P>
    </div>
    </div>
    <%gd=gd+parseFloat(rent.amount)%>
    
    <% }) %>
    <div class="row border">
      <div class="col-10 border">
        <p class="text-right"><strong>Grand Total</strong></p>
      </div>
      <div class="col-2 border">
        <P><strong><%=gd.toFixed(2)%></strong></P>
      </div>
    </div>
</div>
        
<% } %>        
        
<%- include ('../partials/footer')%>