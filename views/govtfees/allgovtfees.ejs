<%- include ('../partials/header')%>

<div class="container">
  <%if(fees.length<1){%>
  <h1> No record found</h1>
  
  <% }else{ %>
  <%var gd=0%>
</div>

<div class="container">
  <div class="row border justify-content-center text-black"style="background:#07b0f2;">
    <p style="margin:8px;"><strong>ALL GOVERNMENT FEES EXPENSES <%=fees[0].month%> <%=fees[0].year%></strong></p>
  </div>
    <div class="row border">
       <div class="col-1 border">
      <P><strong>voucher no</strong></P>
    </div> 
    <div class="col-2 border">
      <P><strong>Date</strong></P>
    </div>
    <div class="col-7 border">
      <P><strong>Description</strong></P>
    </div>
    <div class="col-2 border">
      <P><strong>Amount</strong></P>
    </div>
        
    </div>
    <% fees.forEach(function(fees){ %>
    <div class="row border">
         <div class="col-1 border">
      <P><%=fees.voucherno%></P>
    </div>
    <div class="col-2 border">
      <P><%=fees.date%></P>
    </div>
     <div class="col-7 border">
      <P><%=fees.desc%></P>
    </div>
    <div class="col-2 border">
      <P><%=fees.amount%></P>
    </div>
    </div>
    <%gd=gd+parseFloat(fees.amount)%>
    
    <% }) %>
    <div class="row border">
      <div class="col-10 border">
        <p class="text-right"><strong>Grand Total</strong></p>
      </div>
      <div class="col-2 border">
        <P><strong><%=gd.toFixed(2)%></strong></P>
      </div>
    </div>
</div>
        
<% } %>        
        
<%- include ('../partials/footer')%>