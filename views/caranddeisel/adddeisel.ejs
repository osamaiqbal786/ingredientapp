<%- include ('../partials/header')%>
<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <% var d=new Date()%>
    <%let today = new Date().toLocaleDateString()%>
    <%var month= d.toLocaleString('default', { month: 'long' })%>
    <% var year=new Date().getFullYear()%>
<div class="container">
    
     <div class="row">
        
        <div style="width:50%; margin:0 auto;">
            
            <h2 class="text-center">Add Car Maintenance And Diesel Expenses</h2>
            
            <form action="/expenses/addcaranddeisel" method="post">
                
                             <div class="form-group row">
                   <label for="inputEmail3" class="col-sm-3 col-form-label">Name</label>
                    <div class="col-sm-9">
                    <select id="inputState" class="form-control" name="car[name]" required>
                    <option value="">Select employee</option>
                    <%employee.forEach(function(employee){%>
                        <option><%=employee.name%></option>
                  <%  }) %>
                    
                    
                    </select>
                    </div>
                </div>
             <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 col-form-label">Vechile type</label>
                    <div class="col-sm-9">
                    <input class="form-control" type="text" name="car[type]" placeholder="plate no" required>
                    </div>
            </div>
            <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 col-form-label">Plate no</label>
                    <div class="col-sm-9">
                    <input class="form-control" type="text" name="car[plate]" placeholder="plate no" required>
                    </div>
            </div>
             <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 col-form-label">Date</label>
                    <div class="col-sm-9">
                    <input class="form-control" type="text" name="car[date]" value="<%=today%>" required>
                    </div>
            </div>
            
            <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 col-form-label">voucher No</label>
                    <div class="col-sm-9">
                    <input class="form-control" type="text" name="car[voucherno]" placeholder="voucher number" required>
                    </div>
            </div>
             

                
                <div class="form-group row">
                    <label for="d" class="col-sm-3 col-form-label">Description</label>
                    <div class="col-sm-9">
                    <input id="d" class="form-control" type="text" name="car[desc]" placeholder="description" required>
                    </div>
            </div>
                
            <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 col-form-label">Amount</label>
                    <div class="col-sm-9">
                    <input class="form-control" type="text" name="car[amount]" placeholder="amount" required>
                    </div>
            </div>
            
            
            
               <div class="form-group row">
                   <label for="inputEmail3" class="col-sm-3 col-form-label">Month</label>
                    <div class="col-sm-9">
                    <select id="inputState" class="form-control" name="car[month]">
                    <option selected><%=month.toUpperCase()%></option>
                    <option>JANUARY</option>
                    <option>FEBRUARY</option>
                    <option>MARCH</option>
                    <option>APRIL</option>
                    <option>MAY</option>
                    <option>JUNE</option>
                    <option>JULY</option>
                    <option>AUGUST</option>
                    <option>SEPTEMBER</option>
                    <option>OCTOBER</option>
                    <option>NOVEMBER</option>
                    <option>DECEMBER</option>
                    </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 col-form-label">Year</label>
                    <div class="col-sm-9">
                    <select id="inputState" class="form-control" name="car[year]">
                    <option selected><%=year%></option>
                    <option>2020</option>
                    <option>2021</option>
                    </select>
                    </div>
                </div>
               
             <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
             <p><a href="/home">Go Back</a></p>
                </form>
                </div>
                </div>
                </div>
    
    
    
    
    
    
<%- include ('../partials/footer')%>    